<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" app:cardCornerRadius="10dp" app:cardElevation="20dp" app:cardPreventCornerOverlap="true" app:cardUseCompatPadding="true" app:contentPadding="10dp">
        <LinearLayout android:orientation="vertical" android:id="@+id/ordrsLayout" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="19sp" android:id="@+id/ordrTimePrsn_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="16-07-2020 13:42" android:layout_weight="1"/>
                <TextView android:textSize="19sp" android:textStyle="bold" android:textColor="#ef5350" android:gravity="right" android:id="@+id/ordrStatusPrsn_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:text="In Queue" android:layout_weight="1" android:fontFamily="monospace"/>
            </LinearLayout>
            <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="22sp" android:textColor="#b9925e" android:layout_gravity="top|left|center_vertical|center_horizontal|center|start" android:id="@+id/textView6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="7dp" android:text="Total Items :"/>
                <TextView android:textSize="22sp" android:textColor="#b9925e" android:layout_gravity="top|left|center_vertical|center_horizontal|center|start" android:id="@+id/textView8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="50dp" android:text="Gross Total :"/>
                <TextView android:textSize="27sp" android:textStyle="bold" android:textColor="#000000" android:gravity="start" android:layout_gravity="top|right|center_vertical|center_horizontal|center|end" android:id="@+id/totalItemsORDR_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:layout_marginRight="20dp" android:text="0"/>
                <TextView android:textSize="27sp" android:textStyle="bold" android:textColor="#66bb6a" android:gravity="start" android:layout_gravity="top|right|center_vertical|center_horizontal|center|end" android:id="@+id/grossTotalORDR_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="50dp" android:layout_marginRight="20dp" android:text="$0"/>
            </FrameLayout>
            <Button android:textColor="#ffffff" android:id="@+id/cancelOrder_btn" android:background="@drawable/btnsignup_gradient" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="Cancel" android:fontFamily="@font/open_sans_semibold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
