<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_orderPRSN"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/cktlayoutORDR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/cktlayoutORDR"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/about_btns_bg_woline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:text="Total Items :"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="Gross Total :"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/totalItems_tvORDR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right|center_vertical|center_horizontal|center|end"
                android:layout_marginTop="7dp"
                android:layout_marginRight="20dp"
                android:gravity="start"
                android:text="0"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/grossTotal_tvORDR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right|center_vertical|center_horizontal|center|end"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:gravity="start"
                android:text="$0"
                android:textColor="#66bb6a"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
